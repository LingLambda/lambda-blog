---
import tacImage from "../../public/assets/images/avatar.png";
import DropMenu from "../components/DropMenu.astro";
import Prose from "../components/Prose.astro";
import { Image } from "astro:assets";
import { Content } from "../posts/myUtil.md";
import PlayedGames from "../components/PlayedGames.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const links = [
  { url: "/blog", name: "blog" },
  { url: "/time-line", name: "time line" },
];
---

<BaseLayout description="偶尔会在这乱写" keywords="lab,实验,前端">
  <main>
  偶尔会在这乱写
  <div id="tac-say">
    <Image src={tacImage} alt="Ling avatar" width="128" height="128" loading="eager"/>
    <div class="chat-bubble"></div>
  </div>
  <DropMenu btnName="menu" links={links} />
  <Prose>
    <Content />
  </Prose>

  <PlayedGames/>
</main>
</BaseLayout>

<style>
  .chat-bubble {
    width: 30rem;
    height: 10rem;
    border: 1px solid #d4d4d4;
    background-color: #f9f9f9;
    border-radius: 10px;
  }

  main{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 90rem;
  }
</style>
